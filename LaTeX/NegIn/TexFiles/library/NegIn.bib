	urldate = {2024-08-05},
	date = {2018-05},
	note = {Publisher: American Psychological Association},
	keywords = {Evoked Potentials, Cognition, Electroencephalography, conflict, {LRP}, Language, negation, {EEG}/{ERP}, language},
